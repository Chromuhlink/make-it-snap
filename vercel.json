{
  "version": 2,
  "name": "make-it-snap",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "edge"
    }
  },
  "env": {
    "BLOB_READ_WRITE_TOKEN": "@blob_read_write_token",
    "SECRET_CONDITION": "@secret_condition"
  }
}